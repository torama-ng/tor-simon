
{{> header}}
{{> navbar}}  



    <div class="row container-fluid  " >
       <div class="col w70">
           <div class="card">
                <video class="bd-placeholder-img card-img-top" id="videoid"
                    controls="controls">
                     <source  type="video/mp4">
                    
                </video>
            
            <div class="card-body">
              <p class="card-text" id="videotitle">{{{videoTitle}}}</p> 
              <div class="d-flex justify-content-between align-items-center">
               
                <small class="text-muted" id="vid-0"></small>
              </div>
            </div>
          </div>
       </div>
      
                  
        <div class="col w30">
            {{#each videoGroup}}
                
                <h5 id="{{this.category}}"> {{this.category}} Play List</h5>
                {{#each this.files}}
                    <div class="card rside bg-info"  onclick="playcVideo('{{this}}')">
                        <img src="/images/thumbnails/{{@index}}.jpg" alt="{{@index}}" class="card_img">
                        <h6 class="card_title">{{formatMe this}}</h6>
                        
                    </div>
                {{/each}}
            {{/each}}
    
        </div>
    </div>
        
{{>footer}}